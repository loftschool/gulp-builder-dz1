# editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
indent_size = 4

[*.pug]
indent_size = 2

[*.scss]
indent_size = 2

[*.json]
indent_size = 2

[*.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore
